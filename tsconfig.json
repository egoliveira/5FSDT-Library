{
    "compilerOptions": {
        "target": "ES2022",
        "esModuleInterop": true,
        "module": "Node16",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "Node16",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "outDir": "dist"
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}